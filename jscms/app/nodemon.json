{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node app.js"
  },
  "events": {
    "restart": "echo 'App restarted due to: '$FILENAME''"
  },
  "watch": [
    "api/*",
    "admin/*",
    "./app.js"
  ],
  "ext": "js,css,html"
}